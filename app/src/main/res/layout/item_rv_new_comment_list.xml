<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/new_comment_iv"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp" />

    <ImageView
        android:id="@+id/new_comment_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/new_comment_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/new_comment_head"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/new_comment_head"
        android:textColor="@color/colorWhite4"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/new_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/new_comment_head"
        android:layout_below="@id/new_comment_head"
        android:layout_marginTop="6dp"
        android:lines="1"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/new_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/new_comment_head"
        android:layout_below="@id/new_comment_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/colorWhite4"
        android:textSize="14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite3" />
</RelativeLayout>