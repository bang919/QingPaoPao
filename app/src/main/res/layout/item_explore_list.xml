<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_explore_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="10dp"
        app:layout_constraintBottom_toTopOf="@id/tv_comment"
        app:layout_constraintDimensionRatio="3:2"
        app:layout_constraintHeight_percent="0.6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorWhite5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/iv_explore_item"
        app:layout_constraintTop_toBottomOf="@id/iv_explore_item" />

    <ImageView
        android:id="@+id/iv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@mipmap/icon_comment"
        app:layout_constraintBottom_toBottomOf="@id/tv_comment"
        app:layout_constraintRight_toLeftOf="@id/tv_comment"
        app:layout_constraintTop_toTopOf="@id/tv_comment" />

    <TextView
        android:id="@+id/tv_like"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="0"
        android:textColor="@color/colorWhite5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_comment"
        app:layout_constraintRight_toLeftOf="@id/iv_comment"
        app:layout_constraintTop_toTopOf="@id/iv_comment" />

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@mipmap/icon_like"
        app:layout_constraintBottom_toBottomOf="@id/tv_like"
        app:layout_constraintRight_toLeftOf="@id/tv_like"
        app:layout_constraintTop_toTopOf="@id/tv_like" />

    <TextView
        android:id="@+id/tv_stars"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="0"
        android:textColor="@color/colorWhite5"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_like"
        app:layout_constraintRight_toLeftOf="@id/iv_like"
        app:layout_constraintTop_toTopOf="@id/iv_like" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@mipmap/icon_starts"
        app:layout_constraintBottom_toBottomOf="@id/tv_stars"
        app:layout_constraintRight_toLeftOf="@id/tv_stars"
        app:layout_constraintTop_toTopOf="@id/tv_stars" />

    <TextView
        android:id="@+id/title_explore_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:lines="2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_explore_item"
        app:layout_constraintTop_toTopOf="@id/iv_explore_item" />

    <TextView
        android:id="@+id/time_explore_item"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite3"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/tv_stars"
        app:layout_constraintLeft_toLeftOf="@id/title_explore_item"
        app:layout_constraintRight_toRightOf="@id/title_explore_item" />

    <ImageView
        android:id="@+id/author_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        app:layout_constraintBottom_toTopOf="@id/time_explore_item"
        app:layout_constraintLeft_toLeftOf="@id/time_explore_item"
        app:layout_constraintTop_toBottomOf="@id/title_explore_item" />

    <TextView
        android:id="@+id/author_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorWhite3"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/author_icon"
        app:layout_constraintLeft_toRightOf="@id/author_icon"
        app:layout_constraintTop_toTopOf="@id/author_icon" />

</android.support.constraint.ConstraintLayout>