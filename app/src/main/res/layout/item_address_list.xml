<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginBottom="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="address"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/img_default_address"
        app:layout_constraintLeft_toLeftOf="@id/tv_name"
        app:layout_constraintRight_toRightOf="@id/tv_name"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <View
        android:id="@+id/img_default_address"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/select_img_default_address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_address" />

    <TextView
        android:id="@+id/btn_default_address"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:paddingLeft="60dp"
        android:text="@string/default_address"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/img_default_address"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_default_address" />

    <Button
        android:id="@+id/btn_delete_address"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_white_radius10_blackstroke"
        android:gravity="center"
        android:text="@string/delete"
        app:layout_constraintBottom_toBottomOf="@id/img_default_address"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_default_address" />

    <Button
        android:id="@+id/btn_edit_address"
        android:layout_width="65dp"
        android:layout_height="28dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_white_radius10_blackstroke"
        android:gravity="center"
        android:text="@string/edit"
        app:layout_constraintBottom_toBottomOf="@id/img_default_address"
        app:layout_constraintRight_toLeftOf="@id/btn_delete_address"
        app:layout_constraintTop_toTopOf="@id/img_default_address" />
</android.support.constraint.ConstraintLayout>