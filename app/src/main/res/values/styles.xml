<resources>

    <!-- Base application theme. -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="FullScreenLightDialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="animate_dialog_exit">
        <item name="android:windowExitAnimation">@anim/anim_dialog_exit</item>
    </style>

    <style name="animate_dialog_enter_and_exit" parent="animate_dialog_exit">
        <item name="android:windowEnterAnimation">@anim/anim_dialog_enter</item>
    </style>

    <style name="LauncherActivity" parent="AppThemeLight">
        <item name="android:background">@mipmap/b_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
